x=float(input())
if(x<100):
    print("100.00")
elif(x>=100 and x<199):
    print("%.2f"%(x*1.20))
elif((x>199 and x<400) and (x*1.50)>400):
    print("%.2f"%(x*1.50+((15/100)*(x*1.50))))
elif(x>400 and x<600):
    print("%.2f"%(x*1.80+((15/100)*(x*1.80))))
else:
    print("%.2f"%(x*2.00+((15/100)*(x*2.00))))
